---
import { ui, defaultLang } from '../i18n/ui';

const currentLocale = Astro.currentLocale || defaultLang;
const t = ui[currentLocale as keyof typeof ui];
const isRtl = currentLocale === 'ar';

const values = [
  { 
    key: 'values.item5', 
    iconIndex: 4, 
    // Dedicated Service (Featured) - Primary Brand Color
    style: 'bg-secondary/10 backdrop-blur-md text-white border-primary',
    iconStyle: 'bg-white/5 text-gold group-hover:bg-gold group-hover:text-white'
  },
  { 
    key: 'values.item1', 
    iconIndex: 0, 
    // Quality - Gold Theme
    style: 'bg-white/10 backdrop-blur-md text-white border-white/10 hover:border-gold',
    iconStyle: 'bg-white/5 text-gold group-hover:bg-gold group-hover:text-white shadow-sm'
  },
  { 
    key: 'values.item2', 
    iconIndex: 1, 
    // Safety - Secondary Theme (Red)
    style: 'bg-white/10 backdrop-blur-md text-white border-white/10 hover:border-secondary',
    iconStyle: 'bg-white/5 text-gold group-hover:bg-gold group-hover:text-white shadow-sm'
  },
  { 
    key: 'values.item3', 
    iconIndex: 2, 
    // Transparency - Primary Theme (Blue)
    style: 'bg-white/10 backdrop-blur-md text-white border-white/10 hover:border-primary',
    iconStyle: 'bg-white/5 text-gold group-hover:bg-gold group-hover:text-white shadow-sm'
  },
  { 
    key: 'values.item4', 
    iconIndex: 3, 
    // Innovation - Black Theme
    style: 'bg-white/10 backdrop-blur-md text-white border-white/10 hover:border-black',
    iconStyle: 'bg-white/5 text-gold group-hover:bg-gold group-hover:text-white shadow-sm'
  },
];

const icons = [
  // 0: Quality (Trophy)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>`,
  
  // 1: Safety (Shield/Heart)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>`,
  
  // 2: Transparency (Handshake/Open)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>`,
  
  // 3: Innovation (Lightbulb/Spark)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
  
  // 4: Service (Heart/Hands)
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" /></svg>`,
];
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">{t['values.title']}</h2>
      <div class="h-1 w-24 bg-gold mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto auto-rows-[minmax(200px,auto)]">
      {values.map((item, index) => {
        // Masonry/Bento Layout Logic
        // Item 0: Large vertical span on desktop (Row 1 & 2, Col 1)
        const isFirst = index === 0;
        
        return (
          <div 
            class={`${isFirst ? 'lg:row-span-2 md:col-span-2 lg:col-span-1' : 'col-span-1'}`}
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div 
              class={`
                group relative h-full w-full rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 ease-in-out transform hover:-translate-y-2 
                flex flex-col items-center justify-center text-center border overflow-hidden
                ${item.style}
              `}
            >
              {/* Decorative Background for First Item - Removed custom tint, kept subtle pattern */}
              {isFirst && (
                <div class="absolute inset-0 opacity-5 pattern-grid-lg pointer-events-none"></div>
              )}
              
              <div class={`
                rounded-full flex items-center justify-center transition-colors duration-300 ease-in-out mb-6
                ${isFirst ? 'w-24 h-24 shadow-lg' : 'w-16 h-16'}
                ${item.iconStyle}
              `}>
                <div class={isFirst ? 'w-12 h-12' : 'w-8 h-8'}>
                  <Fragment set:html={icons[item.iconIndex]} />
                </div>
              </div>
              
              <h3 class={`font-bold transition-colors leading-relaxed ${isFirst ? 'text-2xl' : 'text-lg'}`}>
                {t[item.key as keyof typeof t]}
              </h3>
              
              {isFirst && (
                 <div class="mt-4 w-12 h-1 bg-gold rounded-full opacity-60"></div>
              )}
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
