---
import { ui, defaultLang } from '../i18n/ui';

const currentLocale = Astro.currentLocale || defaultLang;
const t = ui[currentLocale as keyof typeof ui];

const logos = [
  '33322 copy.svg',
  '800_65cfc25bde0d7 copy.svg',
  'F2ABDDEC-34EA-4AEF-9B1A-832470892134 copy.svg',
  'albait-guests copy.svg',
  // 'logo copy.svg',
  'logo-dark copy.svg',
  'اثراء الخير.svg',
  'الشعار copy.svg',
  'جمعية الارادة copy.svg',
  'شعار بيرين – SVG.svg',
  'مدارس الفرسان الاهلية PNG copy.svg'
];
---

<section id="partners" class="mt-20 scroll-mt-28">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">{t['partners.title']}</h2>
      <div class="h-1 w-24 bg-gold mx-auto rounded-full"></div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 items-center justify-center">
      {logos.map((logo, index) => (
        <div 
          class="flex items-center justify-center p-6 bg-black/30 backdrop-blur-xl rounded-xl border border-white/10 hover:border-gold/30 transition-all duration-300 group"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <img 
            src={`/images/logos/${logo}`} 
            alt="Partner Logo" 
            class="max-h-20 w-auto object-contain transition-all duration-500 ease-in-out filter brightness-0 invert group-hover:invert-[0.3] group-hover:scale-105"
          />
        </div>
      ))}
    </div>
  </div>
</section>