---
import { ui, defaultLang } from '../i18n/ui';
import { SITE } from '@/config/site';

const currentLocale = Astro.currentLocale || defaultLang;
const t = ui[currentLocale as keyof typeof ui];
const isRtl = currentLocale === 'ar';

const homeLink = currentLocale === 'ar' ? '/' : '/en';

---

<footer id="contact" class="bg-black/50 backdrop-blur-xl text-white pt-16 pb-8 border-t-4 border-gold">
  <div class="container mx-auto px-4">
    <div class="grid md:grid-cols-4 gap-12 mb-12">
      
      <!-- Logo & About -->
      <div class="md:col-span-1">
        <img src="/logowhte.svg" alt="Rehab Logo" class="h-24 mb-6" />
        <p class="text-gray-300 leading-relaxed text-sm">
            {t['hero.description']}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-6 text-gold">{t['footer.links']}</h3>
        <ul class="space-y-3">
          <li><a href={homeLink} class="text-sm text-gray-300 hover:text-white hover:translate-x-1 transition-all inline-block">{t['nav.home']}</a></li>
          <li><a href={chairmanLink} class="text-sm text-gray-300 hover:text-white hover:translate-x-1 transition-all inline-block">{t['nav.chairman']}</a></li>
          <li><a href="#vision" class="text-sm text-gray-300 hover:text-white hover:translate-x-1 transition-all inline-block">{t['nav.vision']}</a></li>
          <li><a href="#services" class="text-sm text-gray-300 hover:text-white hover:translate-x-1 transition-all inline-block">{t['nav.services']}</a></li>
          <li><a href="#contact" class="text-sm text-gray-300 hover:text-white hover:translate-x-1 transition-all inline-block">{t['nav.contact']}</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="md:col-span-2">
        <h3 class="text-lg font-bold mb-6 text-gold">{t['footer.contact_us']}</h3>
        <ul class="space-y-4">
          <li class="flex items-start gap-4">
            <div class="mt-1 bg-black/20 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
            </div>
            <div>
                <span class="block text-xs text-gray-400 mb-1 uppercase tracking-wider">{t['footer.address']}</span>
                <span class="text-sm text-white">{t['contact.address_value']}</span>
            </div>
          </li>

          <li class="flex items-start gap-4">
             <div class="mt-1 bg-black/20 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
             </div>
            <div>
                <span class="block text-xs text-gray-400 mb-1 uppercase tracking-wider">{t['footer.email']}</span>
                <a href={`mailto:${t['contact.email_value']}`} class="text-sm text-white hover:text-gold transition-colors">{t['contact.email_value']}</a>
            </div>
          </li>
          
          <li class="flex items-start gap-4">
            <div class="mt-1 bg-black/20 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
            </div>
            <div>
                <span class="block text-xs text-gray-400 mb-1 uppercase tracking-wider">{t['footer.phone']}</span>
                <a href={`tel:${t['contact.phone_value']}`} class="text-sm text-white hover:text-gold transition-colors" dir="ltr">{t['contact.phone_value']}</a>
            </div>
          </li>

          <li class="flex items-start gap-4">
            <div class="mt-1 bg-black/20 p-2 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
            <div>
                <span class="block text-xs text-gray-400 mb-1 uppercase tracking-wider">{t['footer.working_hours']}</span>
                <span class="text-sm text-white">{t['contact.working_hours_value']}</span>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- Social Links -->
    <div class="flex justify-center gap-6 mb-12 flex-wrap">
       {SITE.socialLinks.map(link => (
            <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-white hover:text-gold transition-colors transform hover:scale-110" aria-label={link.label}>
                <Fragment set:html={link.icon}></Fragment>
            </a>
        ))}
    </div>

    <div class="border-t border-white/10 pt-8 text-center">
      <p class="text-gray-400 text-sm">{t['footer.rights']}</p>
    </div>
  </div>
</footer>
