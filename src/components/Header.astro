---
import { ui, defaultLang } from '../i18n/ui';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLocale = Astro.currentLocale || defaultLang;
const t = ui[currentLocale as keyof typeof ui];

const homeLink = getRelativeLocaleUrl(currentLocale, '');
const chairmanLink = getRelativeLocaleUrl(currentLocale, 'chairman-message');
const projectsLink = getRelativeLocaleUrl(currentLocale, 'projects');

const services = [
  { titleKey: 'services.catering.title', slug: 'catering' },
  { titleKey: 'services.contracting.title', slug: 'contracting' },
  { titleKey: 'services.management.title', slug: 'management' },
  { titleKey: 'services.logistics.title', slug: 'logistics' },
  { titleKey: 'services.consulting.title', slug: 'consulting' },
];

// Calculate language switch link
const targetLang = currentLocale === 'ar' ? 'en' : 'ar';
let currentPath = Astro.url.pathname;
// Remove 'en' prefix if present to get the pure path
if (currentLocale === 'en' && currentPath.startsWith('/en')) {
  currentPath = currentPath.replace(/^\/en/, '');
}

const langLink = getRelativeLocaleUrl(targetLang, currentPath);
const langLabel = currentLocale === 'ar' ? 'English' : 'العربية';
---

<header class="sticky top-0 z-[200] bg-black/50 backdrop-blur-xl text-white py-4 shadow-md">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <a href={homeLink} class="flex items-center">
      <img src="/logowhte.svg" alt="Rehab Logo" class="h-12" />
    </a>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex gap-6 items-center">
      <a href={homeLink} class="text-sm hover:text-secondary transition-colors">{t['nav.home']}</a>
      <a href={projectsLink} class="text-sm hover:text-secondary transition-colors">{t['nav.projects']}</a>
            <!-- Services Dropdown -->
      <details class="group relative desktop-hover">
        <summary class="list-none cursor-pointer text-sm hover:text-secondary transition-colors flex items-center gap-1 py-4">
          {t['nav.services']}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <div class={`absolute top-full pt-2 w-56 ${currentLocale === 'ar' ? 'right-0' : 'left-0'}`}>
            <div class="dropdown-content bg-black/90 backdrop-blur-xl border border-white/10 rounded-xl shadow-xl overflow-hidden flex flex-col py-2 transition-all duration-300 ease-out transform origin-top opacity-0 -translate-y-2 scale-95">
                {services.map(s => (
                    <a href={getRelativeLocaleUrl(currentLocale, `services/${s.slug}`)} class="px-4 py-3 text-sm hover:bg-white/10 hover:text-gold transition-colors text-start">
                    {t[s.titleKey]}
                    </a>
                ))}
            </div>
        </div>
      </details>
      <a href={`${homeLink}#vision`} class="text-sm hover:text-secondary transition-colors">{t['nav.vision']}</a>
      <a href={chairmanLink} class="text-sm hover:text-secondary transition-colors">{t['nav.chairman']}</a>
      <a href={`${homeLink}#contact`} class="text-sm hover:text-secondary transition-colors">{t['nav.contact']}</a>
    </nav>

    <div class="flex gap-4 items-center">
       <!-- Language Switcher -->
       <a href={langLink} class="text-sm font-bold hover:text-gold transition-colors relative z-[120]" id="lang-switch" data-lang={currentLocale === 'ar' ? 'en' : 'ar'}>
         {langLabel}
       </a>

       <!-- Mobile Menu Button -->
       <button id="mobile-menu-btn" class="md:hidden relative z-[150] w-12 h-12 flex flex-col justify-center items-center focus:outline-none" aria-label="Toggle Menu" aria-expanded="false">
         <span class="hamburger-line block w-8 h-0.5 bg-white transition-all duration-300 ease-in-out"></span>
         <span class="hamburger-line block w-8 h-0.5 bg-white transition-all duration-300 ease-in-out my-1.5"></span>
         <span class="hamburger-line block w-8 h-0.5 bg-white transition-all duration-300 ease-in-out"></span>
       </button>
    </div>
  </div>
</header>

<div id="mobile-menu" class="fixed inset-0 z-[100] bg-gradient-to-b from-[#0a1950] to-black backdrop-blur-2xl opacity-0 invisible transition-all duration-500 ease-in-out md:hidden flex flex-col items-center justify-center overflow-y-auto">
  
  <nav id="mobile-nav-content" class="flex flex-col space-y-6 text-center w-full px-8 py-12 transform translate-y-8 transition-all duration-500 ease-out delay-100">
    <a href={homeLink} class="mobile-link text-3xl font-bold text-white hover:text-gold transition-colors inline-block py-2">{t['nav.home']}</a>
    <a href={projectsLink} class="mobile-link text-3xl font-bold text-white hover:text-gold transition-colors inline-block py-2">{t['nav.projects']}</a>
    
    <!-- Mobile Services Dropdown -->
    <details class="group w-full">
        <summary class="list-none cursor-pointer text-3xl font-bold text-white hover:text-gold transition-colors flex items-center justify-center gap-3 py-2">
            {t['nav.services']}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transition-transform duration-300 group-open:rotate-180 text-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </summary>
        <div class="mt-4 flex flex-col gap-2 w-full bg-white/5 rounded-2xl p-4 border border-white/10 overflow-hidden transition-all duration-300 animate-fade-in-down">
            {services.map(s => (
                <a href={getRelativeLocaleUrl(currentLocale, `services/${s.slug}`)} class="mobile-link text-lg text-gray-200 hover:text-gold transition-colors py-3 px-4 rounded-lg hover:bg-white/5 block">
                    {t[s.titleKey]}
                </a>
            ))}
        </div>
    </details>

    <a href={`${homeLink}#vision`} class="mobile-link text-3xl font-bold text-white hover:text-gold transition-colors inline-block py-2">{t['nav.vision']}</a>
    <a href={chairmanLink} class="mobile-link text-3xl font-bold text-white hover:text-gold transition-colors inline-block py-2">{t['nav.chairman']}</a>
    <a href={`${homeLink}#contact`} class="mobile-link text-3xl font-bold text-white hover:text-gold transition-colors inline-block py-2">{t['nav.contact']}</a>
  </nav>
  
  <div id="mobile-menu-footer" class="mt-auto mb-12 opacity-0 transition-opacity duration-700 delay-300">
      <img src="/logowhte.svg" alt="Rehab Logo" class="h-20 grayscale opacity-50" />
  </div>
</div>

<style>
  /* Hamburger Animation Classes */
  #mobile-menu-btn.menu-open .hamburger-line:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
    transform-origin: center;
  }
  #mobile-menu-btn.menu-open .hamburger-line:nth-child(2) {
    opacity: 0;
    transform: translateX(10px);
  }
  #mobile-menu-btn.menu-open .hamburger-line:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
    transform-origin: center;
  }
  
  /* Staggered Animation for Links */
  .menu-open #mobile-nav-content {
    transform: translateY(0);
  }
  .menu-open #mobile-menu-footer {
    opacity: 1;
  }
</style>

<script>
  // Language Switcher Logic
  const langSwitch = document.getElementById('lang-switch');
  if (langSwitch) {
    langSwitch.addEventListener('click', () => {
      const targetLang = langSwitch.getAttribute('data-lang');
      localStorage.setItem('rehab-lang-preference', targetLang || 'ar');
    });
  }

  // Mobile Menu Logic
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const header = document.querySelector('header');

  if (mobileMenuBtn && mobileMenu) {
    const toggleMenu = () => {
        const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
        mobileMenuBtn.setAttribute('aria-expanded', !isExpanded);
        mobileMenuBtn.classList.toggle('menu-open');
        
        if (!isExpanded) {
            // Open Menu
            mobileMenu.classList.remove('opacity-0', 'invisible');
            mobileMenu.classList.add('menu-open'); // Triggers CSS transitions
            document.body.style.overflow = 'hidden';
        } else {
            // Close Menu
            mobileMenu.classList.add('opacity-0', 'invisible');
            mobileMenu.classList.remove('menu-open');
            document.body.style.overflow = '';
            
            // Close details if open
            const details = mobileMenu.querySelector('details');
            if (details) details.removeAttribute('open');
        }
    };

    mobileMenuBtn.addEventListener('click', toggleMenu);

    // Close menu when clicking a link
    mobileMenu.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target.tagName === 'A' || target.closest('a')) {
             // If it's a link inside the menu, close the menu
             toggleMenu();
        }
    });
  }


  // Desktop Dropdown Hover Logic
  const details = document.querySelectorAll('details.desktop-hover');
  details.forEach(d => {
    const content = d.querySelector('.dropdown-content');
    let timeoutId;

    d.addEventListener('mouseenter', () => {
      if (window.innerWidth >= 768) {
        clearTimeout(timeoutId);
        d.setAttribute('open', 'true');
        // Force reflow
        void content.offsetWidth; 
        
        requestAnimationFrame(() => {
            content.classList.remove('opacity-0', '-translate-y-2', 'scale-95');
            content.classList.add('opacity-100', 'translate-y-0', 'scale-100');
        });
      }
    });

    d.addEventListener('mouseleave', () => {
      if (window.innerWidth >= 768) {
        // Start exit animation
        content.classList.remove('opacity-100', 'translate-y-0', 'scale-100');
        content.classList.add('opacity-0', '-translate-y-2', 'scale-95');
        
        timeoutId = setTimeout(() => {
          d.removeAttribute('open');
        }, 300); // Wait for transition duration
      }
    });
  });
</script>