---
import { ui, defaultLang } from '../i18n/ui';
import { getRelativeLocaleUrl } from 'astro:i18n';

const currentLocale = Astro.currentLocale || defaultLang;
const t = ui[currentLocale as keyof typeof ui];

const homeLink = getRelativeLocaleUrl(currentLocale, '');
const chairmanLink = getRelativeLocaleUrl(currentLocale, 'chairman-message');

const services = [
  { titleKey: 'services.catering.title', slug: 'catering' },
  { titleKey: 'services.contracting.title', slug: 'contracting' },
  { titleKey: 'services.management.title', slug: 'management' },
  { titleKey: 'services.logistics.title', slug: 'logistics' },
  { titleKey: 'services.consulting.title', slug: 'consulting' },
];

// Calculate language switch link
const targetLang = currentLocale === 'ar' ? 'en' : 'ar';
let currentPath = Astro.url.pathname;
// Remove 'en' prefix if present to get the pure path
if (currentLocale === 'en' && currentPath.startsWith('/en')) {
  currentPath = currentPath.replace(/^\/en/, '');
}

const langLink = getRelativeLocaleUrl(targetLang, currentPath);
const langLabel = currentLocale === 'ar' ? 'English' : 'العربية';
---

<header class="sticky top-0 z-50 bg-black/50 backdrop-blur-xl text-white py-4 shadow-md">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <a href={homeLink} class="flex items-center">
      <img src="/logowhte.svg" alt="Rehab Logo" class="h-12" />
    </a>
    
    <!-- Desktop Navigation -->
    <nav class="hidden md:flex gap-6 items-center">
      <a href={homeLink} class="text-sm hover:text-secondary transition-colors">{t['nav.home']}</a>
            <!-- Services Dropdown -->
      <details class="group relative desktop-hover">
        <summary class="list-none cursor-pointer text-sm hover:text-secondary transition-colors flex items-center gap-1 py-4">
          {t['nav.services']}
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </summary>
        <div class={`absolute top-full pt-2 w-56 ${currentLocale === 'ar' ? 'right-0' : 'left-0'}`}>
            <div class="dropdown-content bg-black/90 backdrop-blur-xl border border-white/10 rounded-xl shadow-xl overflow-hidden flex flex-col py-2 transition-all duration-300 ease-out transform origin-top opacity-0 -translate-y-2 scale-95">
                {services.map(s => (
                    <a href={getRelativeLocaleUrl(currentLocale, `services/${s.slug}`)} class="px-4 py-3 text-sm hover:bg-white/10 hover:text-gold transition-colors text-start">
                    {t[s.titleKey]}
                    </a>
                ))}
            </div>
        </div>
      </details>
      <a href={`${homeLink}#vision`} class="text-sm hover:text-secondary transition-colors">{t['nav.vision']}</a>
      <a href={chairmanLink} class="text-sm hover:text-secondary transition-colors">{t['nav.chairman']}</a>
      <a href={`${homeLink}#contact`} class="text-sm hover:text-secondary transition-colors">{t['nav.contact']}</a>
    </nav>

    <div class="flex gap-4 items-center">
       <!-- Language Switcher -->
       <a href={langLink} class="text-sm font-bold hover:text-gold transition-colors" id="lang-switch" data-lang={currentLocale === 'ar' ? 'en' : 'ar'}>
         {langLabel}
       </a>

       <!-- Mobile Menu Button -->
       <button id="mobile-menu-btn" class="md:hidden text-white focus:outline-none" aria-label="Toggle Menu">
         <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
         </svg>
       </button>
    </div>
  </div>
</header>

<div id="mobile-menu" class="fixed inset-0 z-[100] bg-[#0a1950]/95 backdrop-blur-2xl transition-all duration-500 ease-in-out transform translate-x-full md:hidden flex flex-col items-center justify-center overflow-y-auto">
  
  <button id="close-menu-btn" class="absolute top-6 left-6 p-2 text-white/60 hover:text-white transition-colors" aria-label="Close Menu">
     <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
       <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
     </svg>
  </button>

  <nav class="flex flex-col space-y-6 text-center w-full px-8 py-12">
    <a href={homeLink} class="text-2xl md:text-3xl font-bold text-white hover:text-gold transition-colors">{t['nav.home']}</a>
    
    <!-- Mobile Services Dropdown -->
    <details class="group w-full">
        <summary class="list-none cursor-pointer text-2xl md:text-3xl font-bold text-white hover:text-gold transition-colors flex items-center justify-center gap-2">
            {t['nav.services']}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </summary>
        <div class="mt-4 flex flex-col gap-3 w-full bg-white/5 rounded-xl p-4 border border-white/10">
            {services.map(s => (
                <a href={getRelativeLocaleUrl(currentLocale, `services/${s.slug}`)} class="text-lg text-white/90 hover:text-gold transition-colors py-2">
                    {t[s.titleKey]}
                </a>
            ))}
        </div>
    </details>

    <a href={`${homeLink}#vision`} class="text-2xl md:text-3xl font-bold text-white hover:text-gold transition-colors">{t['nav.vision']}</a>
    <a href={chairmanLink} class="text-2xl md:text-3xl font-bold text-white hover:text-gold transition-colors">{t['nav.chairman']}</a>
    <a href={`${homeLink}#contact`} class="text-2xl md:text-3xl font-bold text-white hover:text-gold transition-colors">{t['nav.contact']}</a>
  </nav>
  
  <div class="mt-auto mb-12 opacity-30">
      <img src="/logowhte.svg" alt="Rehab Logo" class="h-16 grayscale" />
  </div>
</div>

<script>
  // Language Switcher Logic
  const langSwitch = document.getElementById('lang-switch');
  if (langSwitch) {
    langSwitch.addEventListener('click', () => {
      const targetLang = langSwitch.getAttribute('data-lang');
      localStorage.setItem('rehab-lang-preference', targetLang || 'ar');
    });
  }

  // Mobile Menu Logic
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const closeMenuBtn = document.getElementById('close-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.remove('translate-x-full');
      document.body.style.overflow = 'hidden'; // Prevent scrolling
    });

    const closeMenu = () => {
      mobileMenu.classList.add('translate-x-full');
      document.body.style.overflow = ''; // Restore scrolling
    };

    if (closeMenuBtn) {
        closeMenuBtn.addEventListener('click', closeMenu);
    }

    // Close menu when clicking a link
    // Only close if it's not a details summary click
    mobileMenu.addEventListener('click', (e) => {
        const target = e.target as HTMLElement;
        if (target.tagName === 'A' || target.closest('a')) {
            closeMenu();
        }
    });
  }

  // Desktop Dropdown Hover Logic
  const details = document.querySelectorAll('details.desktop-hover');
  details.forEach(d => {
    const content = d.querySelector('.dropdown-content');
    let timeoutId;

    d.addEventListener('mouseenter', () => {
      if (window.innerWidth >= 768) {
        clearTimeout(timeoutId);
        d.setAttribute('open', 'true');
        // Force reflow
        void content.offsetWidth; 
        
        requestAnimationFrame(() => {
            content.classList.remove('opacity-0', '-translate-y-2', 'scale-95');
            content.classList.add('opacity-100', 'translate-y-0', 'scale-100');
        });
      }
    });

    d.addEventListener('mouseleave', () => {
      if (window.innerWidth >= 768) {
        // Start exit animation
        content.classList.remove('opacity-100', 'translate-y-0', 'scale-100');
        content.classList.add('opacity-0', '-translate-y-2', 'scale-95');
        
        timeoutId = setTimeout(() => {
          d.removeAttribute('open');
        }, 300); // Wait for transition duration
      }
    });
  });
</script>