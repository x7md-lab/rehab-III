---
import { ui, defaultLang } from '../i18n/ui';

const currentLocale = Astro.currentLocale || defaultLang;
const t = ui[currentLocale as keyof typeof ui];
const isRtl = currentLocale === 'ar';
---

<section class="py-20 bg-white text-primary">
  <div class="container mx-auto px-4">
    <div class={`max-w-4xl mx-auto text-center ${isRtl ? 'font-arabic' : ''}`} data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold mb-8 text-secondary">{t['about.title']}</h2>
      <p class="text-xl md:text-2xl leading-relaxed text-gray-700">
        {t['about.text']}
      </p>
    </div>
  </div>
</section>